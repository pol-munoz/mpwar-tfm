{% extends 'app/base.html.twig' %}

{% block title %}{{ study.name }} - Kunlabo{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('studies') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('studies') }}
{% endblock %}

{% block content %}
    <div class="Studies-wrapper" data-controller="menu" data-action="click->menu#closeMenuIfOutside"
         data-menu-delete-message-value="Are you sure you want to delete this participant? This will remove their logs.">
        <div class="Studies-header">
            <div class="Studies-header-row">
                <a href="{{ path('web_studies') }}" class="App-button-back">
                    <h2 class="App-title"><i class="fa fa-chevron-left"></i></h2>
                </a>
                <h2 class="App-title">Participants - {{ study.name }}</h2>
            </div>
            <div class="Studies-header-row">
                <a href="{{ path('web_logs_by_study', {id: study.id}) }}"
                   class="App-button" data-turbo-frame="modal"
                   download="{{ study.name }}.json">
                    Download logs
                </a>
                <button class="App-button" data-controller="clipboard" data-action="clipboard#copy"
                        data-clipboard-text-value="{{ absolute_url(path('web_participant', {id: study.id })) }}">
                    Copy link
                </button>
            </div>
        </div>

        {% if participants is empty %}
            <div class="App-placeholder">
                <i class="fas fa-users App-placeholder-icon"></i>
                <p class="App-placeholder-text">No participants yet. Share your link!</p>
            </div>
        {% else %}
            <div class="App-six-columns-right Studies-list-header">
                <p class="Studies-list-item"><strong>Nickname</strong></p>
                <p class="Studies-list-item"><strong>Age</strong></p>
                <p class="Studies-list-item"><strong>Gender</strong></p>
                <p class="Studies-list-item"><strong>Handedness</strong></p>
                <p class="Studies-list-item"><strong>Last active</strong></p>
            </div>
            {% for participant in participants %}
                <div class="App-menu-wrapper" id="{{ participant.id }}">
                    <div class="App-six-columns-right Studies-participant-list-row">
                        <div class="Studies-list-item"><span>{{ participant.name }}</span></div>
                        <div class="Studies-list-item"><span>{{ participant.age.raw }}</span></div>
                        <div class="Studies-list-item"><span>{{ participant.gender }}</span></div>
                        <div class="Studies-list-item"><span>{{ participant.handedness }}</span></div>
                        <div class="Studies-list-item"><span>{{ participant.modified | ago }}</span></div>

                        <i class="fas fa-ellipsis-v fa-fw App-kebab-button" data-action="click->menu#toggleMenu"></i>
                    </div>
                    <div class="App-menu">
                        {% if human %}
                            <a class="App-menu-option"
                               href="{{ path('web_studies_human', {id: study.id, participant: participant.id}) }}">
                                <i class="fas fa-fw fa-brain App-menu-option-icon"></i>
                                <p class="App-menu-option-text">Human agent</p>
                            </a>
                        {% endif %}

                        <a class="App-menu-option"
                           href="{{ path('web_logs_by_participant', {id: study.id, participant: participant.id}) }}"
                           download="{{ participant.name }}.json">
                            <i class="fas fa-fw fa-clipboard-list App-menu-option-icon"></i>
                            <p class="App-menu-option-text">Download logs</p>
                        </a>
                        <a class="App-menu-option" data-action="click->menu#confirm"
                           data-name="{{ study.name }}"
                           href="{{ path('web_studies_participant_delete', {id: study.id, participant: participant.id}) }}">
                            <i class="fas fa-fw fa-trash-alt App-menu-option-icon App-menu-option-danger"></i>
                            <p class="App-menu-option-text App-menu-option-danger">Delete participant</p>
                        </a>
                    </div>
                </div>
            {% endfor %}
        {% endif %}
    </div>
{% endblock %}