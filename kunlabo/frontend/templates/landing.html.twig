{% block body %}
    <header class="Landing-header">
        <img draggable="false" class="Landing-logo" height="30" src="{{ asset('build/logo.svg') }}" alt="kunlabo logo">
        <div class="Landing-header-row">
            <a href="{{ path('web_login') }}" class="Landing-link" style="margin-right: 15px">Sign in</a>
            <a href="{{ path('web_register') }}" class="Landing-link-cta">Register</a>
        </div>
    </header>
    <main>
